import java.awt.*;
import java.awt.event.*;
import java.util.concurrent.TimeUnit;
public class Game extends Frame implements WindowListener,ActionListener{
    TextField text = new TextField(20);
    Button b;
    Button c;
    int numClicks = 0;
    public static void main(String[] args) {
        Game myWindow = new Game("My first window");
        myWindow.setSize(350,100);
        myWindow.setVisible(true);
    }

    public Game(String title) {
        super(title);
        setLayout(new FlowLayout());
        addWindowListener(this);
        b = new Button("Click me");
        c = new Button("Click me when 10");
        add(b);
        add(c);
        add(text);
        b.addActionListener(this);
        c.addActionListener(this);
    }

    public void actionPerformed(ActionEvent e){
        numClicks++;
        if(e.getActionCommand() == "Click me when 10"){
            numClicks++;
        }
        text.setText("Button Clicked " + numClicks+ " times");
    }

    public void lev1Clicker() throws InterruptedException{
        numClicks = numClicks - 10;
        for(int i = 0; i > 10; i++){
            Thread.sleep(1000);
            numClicks++;
            text.setText("Button Clicked " + numClicks + " times");
            System.out.println(i);
        }
    }

    public void windowClosing(WindowEvent e) {
        dispose();
        System.exit(0);
    }

    public void windowOpened(WindowEvent e) {}

    public void windowActivated(WindowEvent e) {}

    public void windowIconified(WindowEvent e) {}

    public void windowDeiconified(WindowEvent e) {}

    public void windowDeactivated(WindowEvent e) {}

    public void windowClosed(WindowEvent e) {}

}    
